                <value>Standard</value>
            </setting>
            <setting name="HistorySortBy" serializeAs="String">
                <value>Date</value>
            </setting>
            <setting name="HistoryDays" serializeAs="String">
                <value>7</value>
            </setting>
            <setting name="EnableLogging" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="RequireLocalPassword" serializeAs="String">
