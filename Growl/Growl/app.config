            <setting name="MuteAllSounds" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="DisableBonjour" serializeAs="String">
                <value>False</value>
            </setting>
        </Growl.Properties.Settings>
    </userSettings>

