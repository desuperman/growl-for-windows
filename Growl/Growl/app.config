            </setting>
            <setting name="KeyboardShortcutCloseLast" serializeAs="String">
                <value>Alt+X</value>
            </setting>
            <setting name="KeyboardShortcutCloseAll" serializeAs="String">
                <value>Alt+Shift+X</value>
            </setting>
            <setting name="AllowWebNotifications" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="EnableSubscriptions" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="DisableLegacySupport" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="ManuallyEnableNewApplications" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="AutomaticallyCheckForUpdates" serializeAs="String">
                <value>True</value>
            </setting>
            <setting name="CultureCode" serializeAs="String">
                <value />
